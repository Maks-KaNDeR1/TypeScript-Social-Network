.dialogs {
    display: grid;
    grid-template-columns: 2fr 8fr;
}

.dialogs a {
    color: #13157a;
    text-decoration: none;
}

.dialogsItems {
    padding: 10px 0 0 10px;
    width: 180px;
    
    border:  1px ridge rgb(66, 136, 174);
}


.dialogsItems .active {
    color: rgb(255, 255, 0);

}

.dialog {
	padding: 2px;
    box-shadow: inset -8px -9px 20px 0px rgb(214 234 248);
    border: 1px solid rgb(193, 233, 245);
    /*padding: 2px;
	border-radius: 10px;
    border: 1px solid #c1e9f5; */
}

.dialog img {
    width: 40px;
    height: 40px;
    border-radius: 35px;
}

.messages {
    /* height: '60px'; */
    /* padding: 10px; */
    /* background-color: hsla(0, 0%, 100%, 0.397); */
    /* color: #120d5a; */
    overflow: 'auto';
    height: '400px';
    
}


.messages .message {
    background-color: rgb(234, 245, 250);
}


.dialogF:scrollbar {
  width: 10px;
}

.dialogF:scrollbar-track {
  -webkit-box-shadow: 5px 5px 5px -5px rgba(34, 60, 80, 0.2) inset;
  background-color: #f9f9fd;
  border-radius: 10px;
}

.dialogF:scrollbar-thumb {
  border-radius: 10px;
  background: linear-gradient(180deg, #00c6fb, #005bea);
}