

.postsBlock {
    padding: 10px;
}

.posts {
    margin-top: 10px;
 
}
.textarea {
    border: none;
    cursor: pointer;
    font: inherit;
    padding: 2px 5px;
    /* margin: 2px 4px; */
    border-radius: 5px;
    background-image: linear-gradient(45deg, #83bcdb 10%, #3f010aae 50%, rgb(98, 255, 255) 120%);
    font-size: 14px;
    color: white;
    box-shadow: 0 16px 32px 2px rgba(0, 40, 120, .35);
    transition: .5s;
}

.button {
      border: none;
  cursor: pointer;
  /* font: inherit; */
  display: inline-block;
  color: white;
  padding: 2px 3px;
  margin: 2px 6px;
  border-radius: 10px;
  /* font-family: 'Montserrat', sans-serif; */
  /* text-transform: uppercase; */
  letter-spacing: 1px;
  background-image: linear-gradient(to right, #9EEFE1 0%, #4830F0 51%, #9EEFE1 100%);
  background-size: 200% auto;
  box-shadow: 0 0 20px rgba(0, 0, 0, .1);
  transition: .5s;
 
}

.button:hover {
    background-position: right center;
}
